#!/bin/sh

# Sets and samples the release environment on startup.
# This file is evaluated during startup for both `bin/server` and `bin/migrate`.

# Configure the IPv6 option when using Fly.io's private networking
ip=$(grep fly-local-6pn /etc/hosts 2>/dev/null | cut -f 1)
export RELEASE_DISTRIBUTION=name
export RELEASE_NODE=$FLY_APP_NAME@$ip
